#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks... (ESLint, Audit, Secret Scan)"

# Run API checks
echo "ğŸ“¦ Running API checks..."
(cd api && npm run lint && npm audit --audit-level=high)
if [ $? -ne 0 ]; then
  echo "âŒ Pre-commit checks failed in /api directory."
  exit 1
fi

# Run Client checks
echo "ğŸ“¦ Running Client checks..."
(cd client && npm run lint && npm audit --audit-level=high)
if [ $? -ne 0 ]; then
  echo "âŒ Pre-commit checks failed in /client directory."
  exit 1
fi

# Check for hardcoded secrets
echo "ğŸ” Checking for hardcoded secrets..."
if git grep -E "password|secret|key|token" -- ':!*.json' ':!*.lock' ':!*.md' ':!*.example'; then
  echo "âŒ Potential hardcoded secrets found in staged files! Please remove them before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed! ğŸ‰"
